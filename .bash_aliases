if [ -d "$HOME/.scripts" ]; then
	for script in "$HOME/.scripts"/*; do
		if [ -f "$script" ] && [ -x "$script" ]; then
			script_name=$(basename "$script")
			alias "${script_name%.*}"="$script"
		fi
	done
fi

